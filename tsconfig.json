{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS", 
    "outDir": "./dist",  
    "rootDir": "./app",
    "esModuleInterop": true,  
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
    }
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ],
}